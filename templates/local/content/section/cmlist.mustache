{{!
    @template format_polizeinrw/local/content/section/cmlist

    Displays the course module list as a card grid.
    
    Dies ist das Grid-Layout für die Aktivitäten-Cards im Polizei NRW Format.
    Die Cards werden in einem responsiven Grid (4 Spalten auf Desktop) angezeigt.

    Context variables:
    * cms - Array of course modules
    * hascms - Whether there are course modules
    * showmovehere - Whether to show move here links
    * movingstr - String about what's being moved
}}
{{#showmovehere}}
<p>{{movingstr}} (<a href="{{{cancelcopyurl}}}">{{#str}} cancel {{/str}}</a>)</p>
{{/showmovehere}}
<div class="polizeinrw-activity-grid {{#hascms}}has-activities{{/hascms}}" data-for="cmlist">
    {{#cms}}
        {{#showmovehere}}
            <div class="polizeinrw-movehere">
                <a href="{{{moveurl}}}" title="{{strmovefull}}" class="movehere"></a>
            </div>
        {{/showmovehere}}
        {{#cmitem}}
            {{$ format_polizeinrw/local/content/section/cmitem}}
                {{> format_polizeinrw/local/content/section/cmitem}}
            {{/ format_polizeinrw/local/content/section/cmitem}}
        {{/cmitem}}
    {{/cms}}
    {{#showmovehere}}
        <div class="polizeinrw-movehere">
            <a href="{{{movetosectionurl}}}" title="{{strmovefull}}" class="movehere"></a>
        </div>
    {{/showmovehere}}
</div>

