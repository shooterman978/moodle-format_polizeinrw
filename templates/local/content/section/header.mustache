{{!
    @template format_polizeinrw/local/content/section/header

    Displays a course section header for Polizei NRW format.
    
    Ã„nderungen:
    - Titel ist kein Link mehr, nur Text
    - Toggle-Button ist separat im content.mustache
}}
{{#sectionbulk}}
{{$ core_courseformat/local/content/section/bulkselect }}
    {{> core_courseformat/local/content/section/bulkselect }}
{{/ core_courseformat/local/content/section/bulkselect }}
{{/sectionbulk}}
{{#headerdisplaymultipage}}
    {{^displayonesection}}
        <h3 id="sectionid-{{id}}-title" class="h4 sectionname polizeinrw-section-title mb-0">
            {{name}}
        </h3>
    {{/displayonesection}}
{{/headerdisplaymultipage}}
{{^headerdisplaymultipage}}
    {{#sitehome}}
        <h2 id="sectionid-{{id}}-title" class="h3 sectionname polizeinrw-section-title mb-0">
            {{name}}
        </h2>
    {{/sitehome}}
    {{^sitehome}}
        {{^displayonesection}}
            {{! Nur der Titel - Toggle wird separat gerendert }}
            <h{{headinglevel}} class="h4 sectionname course-content-item d-flex align-self-stretch align-items-center mb-0 polizeinrw-section-title"
                id="sectionid-{{id}}-title" data-for="section_title" data-id="{{id}}" data-number="{{num}}">
                {{name}}
            </h{{headinglevel}}>
        {{/displayonesection}}
    {{/sitehome}}
{{/headerdisplaymultipage}}
